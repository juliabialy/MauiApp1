<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.App">
    <Application.Resources>

        <Style x:Key="HeaderLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="TextColor" Value="#333"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

  
        <Style x:Key="EntryStyle" TargetType="Entry">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BackgroundColor" Value="White"/>
            <Setter Property="TextColor" Value="#333"/>
            <Setter Property="Margin" Value="0,10,10,10"/>
            <Setter Property="HeightRequest" Value="40"/>
        </Style>

  
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BackgroundColor" Value="#4CAF50"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
        </Style>

   
        <Style x:Key="DangerButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BackgroundColor" Value="#f44336"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="HorizontalOptions" Value="End"/>
        </Style>


        <Style x:Key="ItemFrameStyle" TargetType="Frame">
            <Setter Property="BorderColor" Value="#ddd"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="HasShadow" Value="False"/>
        </Style>

        <Style x:Key="ItemLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="TextColor" Value="#555"/>
        </Style>
    </Application.Resources>
</Application>
